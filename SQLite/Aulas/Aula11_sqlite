--Trabalhando com LEFT, RIGHT e INNER JOIN

--lEFT JOIN: seleciona os pedidos se houver pedido na tabela pedidos, mas não necessariamente na tabela clientes.

SELECT ORDER_ID, PEDIDO.ORDER_STATUS, CLIENTE.CUSTOMER_ID, CLIENTE.CUSTOMER_CITY, CLIENTE.CUSTOMER_STATE
FROM ORDERS PEDIDO LEFT JOIN CUSTOMERS CLIENTE
ON PEDIDO.CUSTOMER_ID = CLIENTE.CUSTOMER_ID

-- RIGHT JOIN: Selecione pedidos se houver registros na tabela cliente, mas não necessariamente na tabela pedido.

SELECT ORDER_ID, PEDIDO.ORDER_STATUS, CLIENTE.CUSTOMER_ID, CLIENTE.CUSTOMER_CITY, CLIENTE.CUSTOMER_STATE
FROM ORDERS PEDIDO RIGHT JOIN CUSTOMERS CLIENTE
ON PEDIDO.CUSTOMER_ID = CLIENTE.CUSTOMER_ID