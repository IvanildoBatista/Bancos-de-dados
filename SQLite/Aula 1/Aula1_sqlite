--selecionando todas as colunas de uma base de dados
SELECT * FROM ORDERS

SELECT*
FROM ORDERS

--selecionando colunas específicas
SELECT ORDER_ID, ORDER_STATUS FROM ORDERS;

-- Aplicando Alias (apelidos nas colunas)
SELECT ORDER_ID AS 'ID_PEDIDO', ORDER_STATUS AS 'STATUS_PEDIDO', CUSTOMER_ID AS 'ID_DO_CLIENTE' FROM ORDERS;

--Selecionando apenas linhas únicas
SELECT DISTINCT ORDER_ID AS 'ID_PEDIDO', ORDER_STATUS AS 'STATUS_PEDIDO', CUSTOMER_ID AS 'ID_DO_CLIENTE' FROM ORDERS;

SELECT DISTINCT CUSTOMER_ID FROM ORDERS